# PluralKit system token (required)
SYSTEM_TOKEN=your_pluralkit_token

# JWT authentication secret (required)
# Run this command to generate a secure random string:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your_secure_random_string_for_jwt_auth

# Admin user credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password
ADMIN_DISPLAY_NAME=Administrator

# Cache TTL in seconds (optional, default: 30)
CACHE_TTL=30

# Base URL for avatar links and frontend access
# For local development:
BASE_URL=http://localhost:8080
# For production:
# BASE_URL=https://friends.clovetwilight3.co.uk
